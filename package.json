{
  "name": "my-weather",
  "version": "1.0.0",
  "description": "My personal weather app as PWA.",
  "main": "index.html",
  "scripts": {
    "create-copy": "cpy . '!style.scss' '../../public' --cwd=app",
    "remove-css": "purifycss 'public/style.min.css' 'public/index.html' 'public/script.js' -m -o 'public/style.min.css'",
    "minify-js": "uglifyjs 'public/script.js' -o 'public/script.js'",
    "minify-html": "html-minifier --input-dir public --output-dir public --collapse-whitespace --remove-comments --sort-attributes --sort-class-name --file-ext html",
    "build": "npm run create-copy && npm run remove-css && npm run minify-js && npm run minify-html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bgebelein/my-weather.git"
  },
  "keywords": [
    "weather",
    "app"
  ],
  "author": "Bent Gebelein",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bgebelein/my-weather/issues"
  },
  "homepage": "https://github.com/bgebelein/my-weather#readme",
  "dependencies": {
    "cpy-cli": "^5.0.0",
    "html-minifier": "^4.0.0",
    "purify-css": "^1.2.5",
    "uglify-js": "^3.17.4"
  }
}
